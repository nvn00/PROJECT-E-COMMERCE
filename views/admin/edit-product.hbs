<section>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-center">Edit Product</h2>
                <form action="/admin/edit-product/{{product._id}}" method="post" enctype="multipart/form-data">
                    <label for="">Name</label>
                    <input type="text" class="form-control" name="Name" value="{{product.Name}}">

                    <label for="">Category</label>
                    <input type="text" class="form-control" name="Category" value="{{product.Category}}">

                    <label for="">Price</label>
                    <input type="text" class="form-control" name="Price" value="{{product.Price}}">

                    <label for="">Description</label>
                    <input type="text" class="form-control" name="Descrption" value="{{product.Descrption}}">
                    <img src="/product-images/{{product._id}}.jpg" alt="" srcset="" style="width: 100px;height:auto" id="imgView" class="pt-3">
                    <label for="">Image</label>
                    <input type="file" class="form-control" name="Image" onchange="viewImage(event)">



                    <button type="submit" class="btn btn-success">Submit</button>
                    <script>
                        function viewImage(event){
                            document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
                        }
                    </script>
    
                </form>
            </div>
        </div>
    </div>
</section>
